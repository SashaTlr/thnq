<%# <% content_for :header, @entries.id %>

<head>
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
</head>
<header class="show-entry-page-title">thnq</header>

<div class="body">
    <div class="title">
        <h1>Entries #1</h1>
        <hr>
        <div>
	          	<%= image_tag("edit", class: "images", id:"right-image")%>
	          	<%= image_tag('share', class:"images") %>

        </div>
        <div style="clear:both;"></div>

    </div>

    <div class="chat">

        <div class="chat-style chat-bot">
            Hello, welcome to thnq! Let's enter your first journal entry.
        </div>
        <div class="chat-style chat-bot">
            <%= @random_question.text %>
        </div>
        <div class="chat-style chat-user">
            <div class="form">
				<%= form_for [@journal, @entry] do |f| %>
                      <p> 
                            <%= hidden_field_tag "entry[question_id]", @random_question.id %>
    						<%= f.text_field :text , class:'input-box'%>
                      </p>

                      <p>
                        <%= f.submit %>
                      </p>
                  <% end %>

<!--                 <form>
                    <textarea class="input-box" placeholder="Click to start writing"></textarea>
                    <input type="submit" value="Submit">
                </form> -->
            </div>
        </div>


    </div>
</div>